---
import type { ComponentProps } from 'astro/types';
import { cn } from '../../utils/css';
import MailIcon from '../icons/mail/MailIcon.astro';
import Link from '../ui/Link/Link.astro';

type Props = ComponentProps<typeof Link> & {
  emailAddress: string;
};

const { emailAddress, title = 'Email Us', ...restProps } = Astro.props;
---

<Link
  href={`mailto:${emailAddress}`}
  {title}
  class={cn('no-underline', Astro.props.class)}
  {...restProps}>
  <MailIcon dimOnHover={false} class="inline" />
  <slot>{emailAddress}</slot>
</Link>
