---
import type { ComponentProps } from 'astro/types';
import { cn } from '../../utils/css';
import HeartIcon from '../icons/HeartIcon.astro';
import type SvgIcon from '../icons/SvgIcon.astro';
import Link from '../ui/Link/Link.astro';

type Props = ComponentProps<typeof Link> & {
  authorName: string;
  authorWebsiteUrl: string;
  iconProps?: ComponentProps<typeof SvgIcon>;
};

const {
  authorName,
  authorWebsiteUrl,
  iconProps = {},
  ...restProps
} = Astro.props;
---

<Link
  target="_blank"
  href={authorWebsiteUrl}
  class={cn('no-underline block', Astro.props.class)}
  {...restProps}>
  Crafted with <HeartIcon
    dimOnHover={false}
    fill
    {...iconProps}
    class={cn('inline', iconProps.class)}
  /> by {authorName}
</Link>
