---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'main'> & {
  applyContainerClass?: boolean | undefined;
};

const { applyContainerClass = true, ...restProps } = Astro.props;
---

<main
  class:list={[
    'mx-auto grow px-3 py-4 md:px-4',
    { container: applyContainerClass, 'w-full': !applyContainerClass },
    Astro.props.class,
  ]}
  {...restProps}>
  <slot />
</main>
