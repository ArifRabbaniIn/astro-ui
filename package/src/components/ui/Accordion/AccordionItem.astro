---
import type { ComponentProps } from 'astro/types';
import Collapse from '../Collapse/Collapse.astro';
import { cn } from '../../../utils/css';

type Props = Omit<
  ComponentProps<typeof Collapse>,
  'name' | 'mode' | 'focusColor'
> & {
  /**
   * The name attribute for the item's radio input. Used for grouping when only one accordion item should be open at a time.
   */
  name: string;
};
---

<Collapse
  mode="radio"
  class={cn('join-item', Astro.props.class)}
  {...Astro.props}>
  <slot />
</Collapse>
