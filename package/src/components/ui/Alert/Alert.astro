---
import type { HTMLAttributes } from 'astro/types';
import type { AlertProps } from './types';
import { getAlertClass } from './utils';

type Props = HTMLAttributes<'div'> & AlertProps;

const {
  type,
  alertStyle,
  direction = 'horizontal',
  class: providedClass,
  ...restProps
} = Astro.props;

const cssClass = getAlertClass(type, alertStyle, direction, providedClass);
---

<div role="alert" class={cssClass} {...restProps}>
  <slot />
</div>
