---
import type { HTMLAttributes } from 'astro/types';
import { cn } from '../../utils/css';

type Props = Omit<HTMLAttributes<'svg'>, 'fill'> & {
  fill?: boolean | undefined;
  dimOnHover?: boolean | undefined;
};

const { fill = false, dimOnHover = true, ...restProps } = Astro.props;

const fillColor: string = fill ? 'currentColor' : 'none';

const props: Omit<Props, 'fill'> = {
  width: 24,
  height: 24,
  viewBox: '0 0 24 24',
  'stroke-width': 1,
  stroke: 'currentColor',
  'stroke-linecap': 'round',
  'stroke-linejoin': 'round',
  ...restProps,
};
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  role="img"
  fill={fillColor}
  {...props}
  class={cn(
    'cursor-pointer',
    { 'hover:opacity-75': dimOnHover },
    Astro.props.class
  )}>
  <slot />
</svg>
