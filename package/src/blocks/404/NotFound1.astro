---
import Link from '../../components/ui/Link/Link.astro';

type Props = {
  redirectUrl?: string | undefined;
};

const { redirectUrl = '/' } = Astro.props;
---

<div class="flex flex-col items-center justify-center gap-4 h-full">
  <p class="text-6xl font-bold text-error sm:text-7xl md:text-9xl">404</p>
  <div class="flex flex-col items-center justify-center gap-2">
    <p>Looks like the page you were looking for is no longer here.</p>
    <p>
      Let's go <Link color="primary" hoverLink href={redirectUrl}>home</Link>
    </p>
  </div>
</div>
