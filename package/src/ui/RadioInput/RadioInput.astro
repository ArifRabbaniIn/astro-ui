---
import type { HTMLAttributes } from 'astro/types';
import type { CommonColor } from '../../types/color';
import type { Size } from '../../types/size';
import { getRadioInputColorClass, getRadioInputSizeClass } from './utils';

/**
 * Props for the Radio Input component.
 */
type Props = Omit<HTMLAttributes<'input'>, 'type'> & {
  /**
   * The color scheme of the radio input.
   */
  color?: CommonColor | undefined;

  /**
   * The size of the radio input.
   */
  size?: Size | undefined;
};

const { color, size, class: providedClass, ...restProps } = Astro.props;

let cssClass = 'radio focus-visible:outline-1';

if (color) {
  cssClass += ` ${getRadioInputColorClass(color)}`;
}

if (size) {
  cssClass += ` ${getRadioInputSizeClass(size)}`;
}

if (providedClass) {
  cssClass += ` ${providedClass}`;
}
---

<input type="radio" class={cssClass} {...restProps} />
