---
import type { HTMLAttributes } from 'astro/types';

type Props = Omit<HTMLAttributes<'svg'>, 'fill'>;

const props: Props = {
  width: 24,
  height: 24,
  viewBox: '0 0 24 24',
  'stroke-width': 1,
  stroke: 'currentColor',
  'stroke-linecap': 'round',
  'stroke-linejoin': 'round',
  ...Astro.props,
};
---

<svg xmlns="http://www.w3.org/2000/svg" fill="none" {...props}>
  <slot />
</svg>
